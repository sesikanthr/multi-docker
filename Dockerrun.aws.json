{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"sesikanth/multi-client",
            "hostName":"client",
            "essential":false,
            "memory": 128
        },
        {
            "name":"server",
            "image":"sesikanth/multi-server",
            "hostName":"api",
            "essential":false,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort":8081,
                    "containerPort":5000
                }
            ]
        },
        {
            "name":"worker",
            "image":"sesikanth/multi-worker",
            "essential":false,
            "memory": 128
        },
        {
            "name":"ngnix",
            "image":"sesikanth/multi-ngnix",
            "essential":true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client", "server"],
            "memory": 128,
            "dependsOn": [
                {
                  "containerName": "server",
                  "condition": "HEALTHY"
                },
                {
                    "containerName": "client",
                    "condition": "HEALTHY"
                  }
              ]
        }
    ]
}